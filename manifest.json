{
  "manifest_version": 2,

  "name": "Drift",
  "description": "Become more productive",
  "version": "1.0",
  "author": "Alex Chan",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Drift"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
